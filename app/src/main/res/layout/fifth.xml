<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:src="@drawable/genshin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:id="@+id/fifth_tv_name"
                android:text="超级管理员"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/fifth_tv_username"
                android:text="账号: admin"
                android:paddingBottom="10dp"
                android:textColor="@color/grey"
                android:gravity="bottom" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/btn_my_good"
            android:orientation="vertical"
            android:background="@color/light_grey"
            android:padding="15dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_order" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="我的发布"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:id="@+id/fifth_btn_update_password"
            android:layout_alignParentRight="true"
            android:background="@color/light_grey"
            android:layout_gravity="right"
            android:padding="15dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_edit" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="修改密码"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:background="@color/light_grey"
            android:id="@+id/fifth_btn_userinfo"
            android:orientation="vertical"
            android:padding="15dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/user" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="个人信息"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:background="@color/light_grey"
            android:layout_gravity="right"
            android:padding="15dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/more" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="关于我们"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:id="@+id/fifth_btn_logout"
            android:layout_alignParentLeft="true"
            android:background="@color/light_grey"
            android:layout_gravity="right"
            android:padding="15dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_setting" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="注销"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>